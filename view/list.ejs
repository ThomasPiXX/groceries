    </style>
</head>
<body>
    <div class="container">
        <h1>Your List</h1>
        <div class="row">
            <form class="col s12" id="recipeForm" action="/sortedList" method="post">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="recipeInput" class="materialize-textarea" name="recipe"></textarea>
                        <label for="recipeInput">Recipe</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <button class="btn waves-effect waves-light" type="submit">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <script src="groceries/materialize.min.js"></script>
